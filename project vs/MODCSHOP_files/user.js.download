const checkbox = document.getElementById('checkbox');
const body = document.body;

checkbox.addEventListener('change', function() {
body.classList.toggle('change-background');

});

window.addEventListener('DOMContentLoaded', (event) => {
const animatedTexts = document.querySelectorAll('.animated-text');

animatedTexts.forEach((text) => {
    let position = 0;
    const textContent = text.textContent;
    text.textContent = '';

    const interval = setInterval(() => {
        if (position < textContent.length) {
            text.textContent += textContent[position];
            position++;
        } else {
            clearInterval(interval);
        }
    }, 100);
});
});

window.addEventListener("DOMContentLoaded", () => {
const podElement = document.querySelector(".pod");
const podText = podElement.textContent.trim();
let animationId;
let distance = podElement.offsetWidth; // กำหนดระยะเริ่มต้นให้เท่ากับความกว้างของข้อความ
const step = 0.1; // ความเร็วของการเลื่อน (px)

function startMarquee() {
    animationId = requestAnimationFrame(moveText);
}

function moveText() {
    distance -= step;   
    podElement.style.transform = `translateX(${distance}px)`;

    if (distance <= -podElement.offsetWidth) {
        distance = podElement.offsetWidth;
    }

    animationId = requestAnimationFrame(moveText);
}

startMarquee();
});

